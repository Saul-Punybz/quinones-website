---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Quinones Handyman & Roofing Services — Vega Baja, PR' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Servicios profesionales de handyman y techos en Vega Baja, Puerto Rico. Sellado de techos, remodelaciones, pintura, plomería, electricidad y más." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Montserrat:wght@500;600;700;800;900&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-fondo text-cafe antialiased">
    <slot />
  </body>
</html>
