<section id="contacto" class="py-20 bg-fondo">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-cafe mb-4">
        Solicita Tu Estimado Gratis
      </h2>
      <div class="w-20 h-1 bg-terracota mx-auto rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Form -->
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-arena/50">
        <form id="contact-form" class="space-y-6">
          <div>
            <label for="nombre" class="block text-sm font-semibold text-cafe mb-2">Nombre</label>
            <input
              type="text"
              id="nombre"
              name="nombre"
              required
              class="w-full px-4 py-3 rounded-xl border border-arena bg-fondo focus:outline-none focus:ring-2 focus:ring-terracota/50 focus:border-terracota transition-colors"
              placeholder="Tu nombre completo"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-semibold text-cafe mb-2">Correo Electrónico</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-xl border border-arena bg-fondo focus:outline-none focus:ring-2 focus:ring-terracota/50 focus:border-terracota transition-colors"
              placeholder="tu@email.com"
            />
          </div>
          <div>
            <label for="telefono" class="block text-sm font-semibold text-cafe mb-2">Teléfono</label>
            <input
              type="tel"
              id="telefono"
              name="telefono"
              class="w-full px-4 py-3 rounded-xl border border-arena bg-fondo focus:outline-none focus:ring-2 focus:ring-terracota/50 focus:border-terracota transition-colors"
              placeholder="787-000-0000"
            />
          </div>
          <div>
            <label for="servicio" class="block text-sm font-semibold text-cafe mb-2">Servicio de Interés</label>
            <select
              id="servicio"
              name="servicio"
              class="w-full px-4 py-3 rounded-xl border border-arena bg-fondo focus:outline-none focus:ring-2 focus:ring-terracota/50 focus:border-terracota transition-colors"
            >
              <option value="">Selecciona un servicio</option>
              <option value="sellado">Sellado de Techos</option>
              <option value="banos">Remodelación de Baños</option>
              <option value="pintura">Pintura Interior y Exterior</option>
              <option value="plomeria">Plomería</option>
              <option value="electricidad">Electricidad</option>
              <option value="losetas">Instalación de Losetas</option>
              <option value="otro">Otro / Reparaciones Generales</option>
            </select>
          </div>
          <div>
            <label for="mensaje" class="block text-sm font-semibold text-cafe mb-2">Mensaje</label>
            <textarea
              id="mensaje"
              name="mensaje"
              rows="4"
              class="w-full px-4 py-3 rounded-xl border border-arena bg-fondo focus:outline-none focus:ring-2 focus:ring-terracota/50 focus:border-terracota transition-colors resize-none"
              placeholder="Descríbenos tu proyecto o necesidad..."
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full bg-terracota hover:bg-terracota/90 text-white font-semibold py-4 rounded-xl text-lg transition-all duration-300 hover:scale-[1.02] shadow-lg"
          >
            Enviar Mensaje
          </button>
        </form>

        <!-- Success message -->
        <div id="form-success" class="hidden mt-6 bg-olivo/10 border border-olivo/30 rounded-xl p-6 text-center">
          <svg class="w-12 h-12 text-olivo mx-auto mb-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-olivo font-semibold text-lg">¡Mensaje enviado!</p>
          <p class="text-cafe/70 mt-1">Nos comunicaremos contigo pronto.</p>
        </div>
      </div>

      <!-- Business Info -->
      <div class="space-y-8">
        <div class="bg-cafe rounded-2xl p-8 text-white shadow-lg">
          <h3 class="text-2xl font-bold mb-6 font-[family-name:var(--font-heading)]">Información de Contacto</h3>
          <div class="space-y-5">
            <div class="flex items-start gap-4">
              <svg class="w-6 h-6 text-terracota shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <div>
                <p class="font-semibold">Ubicación</p>
                <p class="text-white/70">Vega Baja, Puerto Rico</p>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <svg class="w-6 h-6 text-terracota shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <div>
                <p class="font-semibold">Teléfono</p>
                <a href="tel:7873717640" class="text-white/70 hover:text-terracota transition-colors">787-371-7640</a>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <svg class="w-6 h-6 text-terracota shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <div>
                <p class="font-semibold">Email</p>
                <a href="mailto:luisqhandyroof07@outlook.com" class="text-white/70 hover:text-terracota transition-colors break-all">luisqhandyroof07@outlook.com</a>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <svg class="w-6 h-6 text-terracota shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div>
                <p class="font-semibold">Horario</p>
                <p class="text-white/70">Lunes - Viernes, 8:00 AM - 5:00 PM</p>
                <p class="text-white/50 text-sm">Cerrado en días feriados</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Google Maps -->
        <div class="rounded-2xl overflow-hidden shadow-lg h-[300px]">
          <iframe
            src="https://maps.google.com/maps?q=Vega+Baja,+Puerto+Rico&output=embed"
            width="100%"
            height="100%"
            style="border:0"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Mapa de Vega Baja, Puerto Rico"
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const success = document.getElementById('form-success');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    form.classList.add('hidden');
    success?.classList.remove('hidden');
  });
</script>
