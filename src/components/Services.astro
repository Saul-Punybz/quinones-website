---
const services = [
  {
    name: 'Sellado de Techos',
    desc: 'Sellado profesional con garantía de hasta 10 años contra filtraciones.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>`,
  },
  {
    name: 'Remodelación de Baños',
    desc: 'Transformamos tu baño con acabados modernos y materiales de calidad.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 6v12a2 2 0 002 2h12a2 2 0 002-2V6M4 6l2-4h12l2 4"/>`,
  },
  {
    name: 'Pintura Interior y Exterior',
    desc: 'Renovamos los colores de tu hogar con pintura duradera y limpia.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>`,
  },
  {
    name: 'Plomería',
    desc: 'Reparamos y modernizamos sistemas de agua y tuberías.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>`,
  },
  {
    name: 'Electricidad',
    desc: 'Instalaciones y reparaciones eléctricas seguras y certificadas.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>`,
  },
  {
    name: 'Instalación de Losetas',
    desc: 'Pisos y paredes con losetas instaladas con precisión y estilo.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M4 5a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 15a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1H5a1 1 0 01-1-1v-4zM14 15a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1v-4z"/>`,
  },
];
---

<section id="servicios" class="py-20 bg-fondo">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-cafe mb-4">
        ¿Qué Hacemos?
      </h2>
      <div class="w-20 h-1 bg-terracota mx-auto rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 border border-arena/50 group">
          <div class="w-14 h-14 bg-terracota/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-terracota/20 transition-colors">
            <svg class="w-7 h-7 text-terracota" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <Fragment set:html={service.icon} />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-cafe mb-3">{service.name}</h3>
          <p class="text-cafe/70 leading-relaxed">{service.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
