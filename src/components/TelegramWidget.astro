<div id="telegram-widget" class="fixed bottom-6 left-6 z-50 translate-y-20 opacity-0 transition-all duration-500">
  <!-- Panel -->
  <div id="telegram-panel" class="hidden mb-3 bg-white rounded-2xl shadow-xl p-6 w-72 border border-arena/50">
    <div class="flex justify-between items-start mb-4">
      <h4 class="font-bold text-cafe text-lg">Telegram</h4>
