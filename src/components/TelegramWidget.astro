    </svg>
  </button>
</div>

<script>
  // Show widget after 2s
  setTimeout(() => {
    const widget = document.getElementById('telegram-widget');
    widget?.classList.remove('translate-y-20', 'opacity-0');
    widget?.classList.add('translate-y-0', 'opacity-100');
  }, 2000);

  // Toggle panel
  const btn = document.getElementById('telegram-btn');
  const panel = document.getElementById('telegram-panel');
  const closeBtn = document.getElementById('telegram-panel-close');

  btn?.addEventListener('click', () => {
    panel?.classList.toggle('hidden');
  });

  closeBtn?.addEventListener('click', () => {
    panel?.classList.add('hidden');
  });
</script>
